<div class="banner">
  <h2>Les restaurants autour de toi</h2>
</div>

<%= form_tag restaurants_path, method: :get do %>
  <div class="search-form-control form-group">
    <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Rechercher un restaurant"%>
     <%= submit_tag "Rechercher", class: "btn btn-primary" %>
   <!--  <input class="form-control string required" type="text" placeholder="Rechercher..." name="search[query]" id="search_query" />
    <button name="button" type="submit" class="btn btn-flat">
      <i class="fas fa-search"></i> -->
    <!-- </button> -->
  </div>
<% end %>

<div
  id="map"
  style="width: 100%;
  height: 200px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>

<div class ="cards-restaurant d-flex scrollmenu">

  <% @restaurants.each do |restaurant| %>
    <%= link_to restaurant_path(restaurant) do %>
      <div class="card-restaurant">
        <div>
          <%= cl_image_tag restaurant.photo.key, height: 120, width: 220, crop: :fill %>
        </div>
        <div class="card-restaurant-infos">
            <div class ="name-restaurant">
              <h5> <%= restaurant.name %> </h5>
            </div>
          <div>
            <div class="category-restaurant">
            <p> <%= restaurant.category %> </p>
          </div>
            <p class="remove-mb"><span>3 repas </span>disponibles</p>
          </div>
          <h2 class="card-restaurant-location "><i class="fas fa-walking"></i> 3 min</h2>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

<%= render 'shared/footer' %>
