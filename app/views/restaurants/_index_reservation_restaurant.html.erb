<div class="banner">
  <h2>Prêt à changer tes habitudes ?</h2>
</div>

<%= simple_form_for :search, url: root_path, method: :get do |f| %>
  <div class="search-form-control form-group">
    <input class="form-control string required" type="text" placeholder="Rechercher..." name="search[query]" id="search_query" />
    <button name="button" type="submit" class="btn btn-flat">
      <i class="fas fa-search"></i>
    </button>
  </div>
<% end %>

<div
  id="map"
  style="width: 100%;
  height: 200px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>

<div class ="cards-restaurant d-flex">
  <% @restaurants.each do |restaurant| %>
    <%= link_to restaurant_path(restaurant) do %>
      <div class="card-restaurant">
        <div>
          <%= cl_image_tag restaurant.photo.key, height: 120, width: 170, crop: :fill %>
        </div>
        <div class="card-restaurant-infos">
          <div>
            <div class ="name-restaurant">
              <h5> <%= restaurant.name %> </h5>
            </div>
            <div class="category-restaurant">
            <p> <%= restaurant.category %> </p>
          </div>
            <p><span>3 repas disponibles</span></p>
          </div>
          <h2 class="card-restaurant-location"><i class="fas fa-walking"></i> 3 min</h2>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

<%= render 'shared/footer' %>
