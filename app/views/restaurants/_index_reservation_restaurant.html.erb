<div class ="cards-restaurant">
  <% @restaurants.each do |restaurant| %>
    <div class="card-restaurant">
      <div class = "image-restaurant">
        <%= cl_image_tag restaurant.photo.key, height: 300, width: 390, crop: :fill %>
      </div>
      <div class="card-restaurant-infos">
        <div>
          <div class ="name-restaurant">
            <h5> <%= restaurant.nom %> </h5>
          </div>
          <p> <%= restaurant.categorie %> </p>
        </div>
        <h2 class="card-restaurant-location">3 min</h2>
      </div>
    </div>
  <% end %>
</div>
