<div class= "container_index_partenaires_restaurants">
  <div class = "title">
    <div class = "index_partenaires_title">
      <h2>Les restaurants partenaires<span><strong> autour de toi</strong></span></h2>
   </div>
  </div>
  <%= form_tag restaurants_path, method: :get do %>
    <div class="search-form-control form-group">
      <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Rechercher un restaurant près de toi"%>
       <%= button_tag(type: "submit", class: "search-btn") do %>
        <i class="fas fa-search"></i>
      <% end %>
    </div>
  <% end %>
  <div class ="index_logos_partenaires d-flex display-block">
    <% @restaurants_all.each do |restaurant| %>
      <div class = "logo_partenaire">
        <%= cl_image_tag restaurant.logo.key, height: 93, width: 93, crop: :fill %>
      </div>
    <% end %>
  </div>
  <div class="question_title">
    <h3>Alors, prêt à changer tes habitudes ?</h3>
  </div>
  <%= render 'meals/release' %>
</div>
<%#= render 'shared/footer' %>
