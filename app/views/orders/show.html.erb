<div class = "container_recap_order">
  <div class="recap_title">
    <h1>C'est <strong>réservé !</strong></h1>
  </div>
  <div class="recap_bar mt-5">
    <ul class="nav nav-tabs mb-3" id="pills-tab" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">Ma commande</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false">Mon QR code</a>
      </li>
    </ul>
    <div class="tab-content" id="pills-tabContent">
      <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
        <div class= "recap_user_menu">
          <div class="order_menu_restaurant_name">
            <h3><strong><%= @order.menu.restaurant.name %></strong></h3>
          </div>
          <div class="card_menu">
            <div class="menu_title_description_style">
              <div class="menu_title_description d-flex">
                <div class="menu_name">
                  <p><strong><%= @order.menu.name %></strong></p>
                </div>
                <div class="menu_description">
                  <h6><%=@order.menu.description%></h6>
                </div>
              </div>
              <div class="menu_style">
                <%if @order.menu.vegetarien == true%>
                  <h4><i class="fas fa-carrot"></i> Végétarien</h4>
                <%elsif @order.menu.vegan == true %>
                  <h4><i class="fas fa-seeding"></i> Vegan</h4>
                <%elsif @order.menu.sans_gluten == true %>
                  <h4><i class="fas fa-bread-slice"> </i>Sans Gluten</h4>
                <%elsif @order.menu.halal == true %>
                  <h4>Halal</h4>
                <%else%>
                <h4> </h4>
                <%end%>
              </div>
            </div>
            <div class="menu_img">
              <%= cl_image_tag @order.menu.photo.key, height: 70, width: 70, crop: :fill %>
            </div>
          </div>
        </div>
        <div class= "recap_user_resto_localisation">
          <div id="map" style="width: 100%; height: 250px;"data-markers="<%= @markers.to_json %>"data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
        </div>
      </div>
      <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
        <div class= "recap_qrcode mt-5">
          <img src="https://upload.wikimedia.org/wikipedia/commons/7/78/Qrcode_wikipedia_fr_v2clean.png" alt="" width="120x120">
          <p>23201</p>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render 'shared/footer' %>
