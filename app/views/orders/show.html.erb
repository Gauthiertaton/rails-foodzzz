<div class = "container_recap_order">
  <div class="recap_title">
    <h2>C'est <span><strong>réservé<span> </strong>!</h2>
  </div>
  <div class="recap_bar">
    <ul class="nav nav-tabs mb-3" id="pills-tab" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">Ma commande</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false">Mon QR code</a>
      </li>
    </ul>
    <div class="tab-content" id="pills-tabContent">
      <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
        <div class= "recap_user_menu">
          <div class="order_menu_restaurant_name">
            <h3><strong><%= @order.menu.restaurant.name %></strong></h3>
          </div>
          <div class="card_menu border-bottom d-flex bd-highlight">
            <div class="menu_title_description-style pl-2 w-100 bd-highlight">
              <div class="menu_name">
                <p><strong><%= @order.menu.name %></strong></p>
              </div>
              <div class="menu_description">
                <h6><%= @order.menu.description %></h6>
              </div>
              <div class="menu_style">
                <%if @order.menu.vegetarien == true%>
                  <h4><i class="fas fa-carrot"></i> Végétarien</h4>
                <%elsif @order.menu.vegan == true %>
                  <h4><i class="fas fa-seeding"></i> Vegan</h4>
                <%elsif @order.menu.sans_gluten == true %>
                  <h4><i class="fas fa-bread-slice"></i> Sans Gluten</h4>
                <%elsif @order.menu.halal == true %>
                  <h4><i class="fas fa-moon"></i> Halal</h4>
                <%else%>
                <h4> </h4>
                <%end%>
              </div>
            </div>

            <div class="menu_img flex-shrink-1 bd-highlight">
              <%= cl_image_tag @order.menu.photo.key, height: 70, width: 70, crop: :fill %>
            </div>
          </div>
        </div>
        <div class="itinary">
          <div class ="button d-flex flex-row align-items-center">
              <i class="fas fa-map-marked-alt"></i>
            <a href="https://www.google.com/maps/dir/?api=1&origin=<%=current_user.restaurant.address%>&destination=<%=@order.menu.restaurant.address%>&travelmode=walking">Voir l'itinéraire</a>
          </div>
        </div>
      </div>
      <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
        <div class="instructions">
          <p>Présentes ce QR code au moment du retrait de ta commande.</p>
        </div>
        <div class= "recap_qrcode">
          <%= image_tag @product.qr_code.url %>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render 'shared/footer' %>
